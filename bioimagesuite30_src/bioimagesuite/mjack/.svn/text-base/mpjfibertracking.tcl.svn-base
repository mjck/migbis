itcl::body mpjfibertracking::fiber_quantize { } {

    set FIBERS 3

    set fiber_image [ lindex $global_list(result_list) $FIBERS ] 

    ## get current selection 
    set sel_item [ $widget_list(fiber_list) getcurselection ]
    
