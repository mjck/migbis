	if { [ lindex $global_list(fiber_disp_list) $j ] == 1 } { 
	    [ [ [ $parent GetViewer ] GetRenderer 3 ] GetRenderer ] AddActor $actor
	}
    }
    
    [ $parent GetViewer ] UpdateDisplay
    
}

