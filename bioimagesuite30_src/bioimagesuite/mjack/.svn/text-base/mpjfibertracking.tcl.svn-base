itcl::body mpjfibertracking::fiber_add { polydata } {

    ## insert new fiber
    set num_fibers [ llength $global_list(fiber_list) ]
    set name "Bundle_[expr $num_fibers + 1]"
    
    set index [ fiber_addwithname $name $polydata ]
    
    return $index
}

